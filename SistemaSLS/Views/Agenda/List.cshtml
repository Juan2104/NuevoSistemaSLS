 <div ng-class="{'loading':  isLoading}"></div>

<div class="panel panel-danger" ng-init="initAgenda()">
    <div class="panel-heading">
        <h3 class="panel-title">Calendario</h3>
    </div>
    <div class="panel-body">
        <div class="buttonOne">
            <button class="btn btn-dark" ng-click="goToCreate()">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div>

    <div class="table table-striped">
        <table ng-table="AgendaTable" id="AgendaTable" class="table table-bordered">
            <tbody>
                <tr ng-repeat="row in $data">
                    <td data-title="'Acciones'" style="width:14%;">
                         <button type="button" class="btn" ng-click="goToEdit(row.IdAgenda)">
                            <i class="fas fa-pencil-alt"></i>
                            <span class="glyphicon glyphicon-refresh"></span>
                        </button>
                         
                    </td>

                    <td data-title="'Fecha'">{{row.Desde | date:"MM/dd/yyyy"}} a {{row.Hasta | date:"MM/dd/yyyy"}}</td>   
                    <td data-title="'Hora'">{{row.HoraInicio}}</td>     
                   
                    <td data-title="'LU'">
                        <div ng-if="row.Lunes" style="background:green;width:15px;height:15px;float:left;margin-right:2px;">
                            <!-- code to render the regular video block -->
                        </div> 
                    </td>   
                    <td data-title="'MA'">
                        <div ng-if="row.Martes" style="background:green;width:15px;height:15px;float:left;margin-right:2px;">
                            <!-- code to render the regular video block -->
                        </div>
                    </td>
                    <td data-title="'MI'">
                        <div ng-if="row.Miercoles" style="background:green;width:15px;height:15px;float:left;margin-right:2px;">
                            <!-- code to render the regular video block -->
                        </div>
                    </td>   
                    <td data-title="'JU'">
                        <div ng-if="row.Jueves" style="background:green;width:15px;height:15px;float:left;margin-right:2px;">
                            <!-- code to render the regular video block -->
                        </div>
                    </td>   
                    <td data-title="'VI'">
                        <div ng-if="row.Jueves" style="background:green;width:15px;height:15px;float:left;margin-right:2px;">
                            <!-- code to render the regular video block -->
                        </div>
                    </td>    
                    <td data-title="'Estado'">{{row.Ciudad.Descripcion}}</td> 
                    <td data-title="'Alumnos'">{{5}}</td> 
                    <td data-title="'Instructor'">{{row.Persona.Nombre}}</td> 
                    <td data-title="'Pais'">{{row.Pais.Descripcion}}</td>          
                    <td data-title="'Pendiente'">{{}}</td>                
                </tr>
            </tbody>
        </table>
    </div>
</div>

