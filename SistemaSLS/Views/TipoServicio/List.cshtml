<div ng-class="{'loading':  isLoading}"></div>

<div class="panel panel-danger" ng-init="initTipoServicio()">
    <div class="panel-heading">
        <h3 class="panel-title">Tipo Servicios</h3>
    </div>
    <div class="panel-body">
        <div class="buttonOne">
            <button class="btn btn-dark" ng-click="CleanTipoServicio();" data-target="#ModalCreateEditEmpresa" data-toggle="modal">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
    </div>

    <div class="table table-striped">
        <table ng-table="TipoServicioTable" id="TipoServicioTable" class="table table-bordered">
            <tbody>
                <tr ng-repeat="row in $data">
                    <td data-title="'Acciones'" style="width:14%;">
                        <button type="button" class="btn" ng-click="loadTipoServicio(row)"
                                data-target="#ModalCreateEditEmpresa" data-toggle="modal">
                            <i class="fas fa-pencil-alt"></i>
                            <span class="glyphicon glyphicon-refresh"></span>
                        </button>
                        <button type="button" class="btn" ng-click="loadTipoServicio(row)"
                                data-target="#ModalDeleteConfirm" data-toggle="modal">
                            <i class="fas fa-trash-alt"></i>
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                    </td>                   
                    <td data-title="'Nombre'">{{row.Nombre}}</td>
                    <td data-title="'Descripcion'">{{row.Descripcion}}</td>
                    <td data-title="'Valida'">{{row.Valida}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="ModalCreateEditEmpresa" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Nuevo Tipo Persona</h4>
            </div>
            <div class="modal-body">
                <form name="TipoServicioForm">
                    <div class="inputLine">
                        <label>Nombre</label>
                        <input class="form-control" ng-model="TipoServicio.Nombre" />
                        <label>Descricpion</label>
                        <input class="form-control" ng-model="TipoServicio.Descripcion" />
                        <label>Valida</label>
                        <input class="form-control" ng-model="TipoServicio.Valida" required />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button ng-show="isSave" type="button" class="btn buttonNew"
                        ng-disabled="TipoServicioForm.$invalid" data-dismiss="modal"
                        ng-click="saveTipoServicio()">
                    Crear
                </button>
                <button ng-show="!isSave" type="button" data-dismiss="modal"
                        class="btn buttonNew" ng-disabled="TipoServicioForm.$invalid"
                        ng-click="editTipoServicio()">
                    Editar
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="ModalMessage" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Mensaje</h4>
            </div>
            <div class="modal-body">
                <p ng-class="{'success': isSuccess, 'error': !isSuccess}">{{message}}</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="ModalDeleteConfirm" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Aviso</h4>
            </div>
            <div class="modal-body">
                <p> ¿Desea eliminar el tipo de Servicio: <b>{{TipoServicio.Nombre}}</b>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn buttonNew" ng-click="DeleteTipoServicio()" data-dismiss="modal">Eliminar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->