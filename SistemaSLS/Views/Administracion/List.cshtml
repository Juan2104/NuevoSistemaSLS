    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">Tipo Moneda</h3>
        </div>
        <div class="panel-body">
            <div class="buttonOne">
                <button class="btn btn-dark" ng-click="CleanTipoMoneda();" data-target="#ModalCreateEditEmpresa" data-toggle="modal">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
            </div>
        </div>
        <div class="table table-striped">
            <table ng-table="TipoMonedaTable" id="TipoMonedaTable" class="table table-bordered">
                <tbody>
                    <tr ng-repeat="row in $data">
                        <td data-title="'Acciones'" style="width:14%;">
                            <button type="button" class="btn" ng-click="loadTipoMoneda(row)"
                                    data-target="#ModalCreateEditEmpresa" data-toggle="modal">
